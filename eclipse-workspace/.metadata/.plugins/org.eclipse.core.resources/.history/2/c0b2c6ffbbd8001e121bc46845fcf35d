package exercicio10;
import java.util.Scanner;
public class execucaoExercicio10 {
	
	public static void main(String[] args) {
		
		Scanner input=new Scanner(System.in);
		exercicio10 empregado1=new exercicio10();
		System.out.println("Digite o nome");
		String nome=input.nextLine();
		System.out.println("Digite o sobrenome");
		String sobrenome=input.nextLine();
		System.out.println("Digite o salário");
		double salario=input.nextDouble();
		System.out.println("Nome: "+empregado1.nome(nome)+"\nSobrenome: "+empregado1.sobrenome(sobrenome)+"\nSalario: "+empregado1.salario(salario));
		System.out.println("Digite o valor do aumento");
		double aumento=input.nextDouble();
		System.out.println("Salário com aumento: "+empregado1.novoSalario(salario, aumento)+"\nSalário anual: "+empregado1.salarioAnual(salario));
		
		exercicio10 empregado2=new exercicio10();
		System.out.println("Digite o nome");
		String nome1=input.nextLine();
		System.out.println("Digite o sobrenome");
		String sobrenome1=input.nextLine();
		System.out.println("Digite o salário");
		double salario1=input.nextDouble();
		System.out.println("Nome: "+empregado2.nome(nome)+"\nSobrenome: "+empregado2.sobrenome(sobrenome)+"\nSalario: "+empregado2.salario(salario));
		System.out.println("Digite o valor do aumento");
		double aumento1=input.nextDouble();
		System.out.println("Salário com aumento: "+empregado2.novoSalario(salario, aumento)+"\nSalário anual: "+empregado2.salarioAnual(salario));

	}
}