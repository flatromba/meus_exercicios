import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		int ipi, numeroPecas1, numeroPecas2, codigoPecas1, codigoPecas2;
		double valorPeca1, valorPeca2, valorTotal;
		System.out.println("Digite o valor do IPI");
		ipi=input.nextInt();
		System.out.println("Digite o código da peça 1");
		codigoPecas1=input.nextInt();
		System.out.println("Digite o valor da peça 1");
		valorPeca1=input.nextDouble();
		System.out.println("Digite a quantidade de peças 1");
		numeroPecas1=input.nextInt();
		System.out.println("Digite o código da peça 2");
		codigoPecas2=input.nextInt();
		System.out.println("Digite o valor da peça 2");
		valorPeca2=input.nextDouble();
		System.out.println("Digite a quantidade de peças 2");
		numeroPecas2=input.nextInt();
		valorTotal=((valorPeca1*numeroPecas1)+(valorPeca2*numeroPecas2))*(ipi/100+1);
		System.out.println("O valor a ser pago é: "+valorTotal);
	}
}


